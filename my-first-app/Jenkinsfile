pipeline {
  agent none

  stages {
    stage('Back-end: Build Java App') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        echo '🛠️ Building Java Hello World...'
        sh '''
          mkdir -p out
          echo 'public class HelloWorld { public static void main(String[] args) { System.out.println("Hello from Java!"); } }' > HelloWorld.java
          javac -d out HelloWorld.java
          java -cp out HelloWorld
        '''
      }
    }

    stage('Front-end: Node Check') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        echo '📦 Checking Node.js setup...'
        sh '''
          echo "console.log('Hello from Node.js!')" > app.js
          node app.js
        '''
      }
    }
  }

  post {
    success {
      echo '✅ Build completed successfully!'
    }
    failure {
      echo '❌ Build failed!'
    }
  }
}
